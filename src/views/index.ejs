<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiz="X-UA-compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ahihi Do ngoc</title>
    <link rel="stylesheet" href="/css/styles.css">
    <!-- <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css"> -->
</head>

<body>
    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/upload">Upload File</a>
      
    </div>

    <div>
            <table>
                <tr>
                    <th>ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Actoins</th>
                </tr>
            
                <tbody>
                    <% for(let i=0; i < dataUser.length; i++) { %>
                        <tr>
                            <td>
                                <%= dataUser[i].id %>
                            </td>
                            <td>
                                <%= dataUser[i].firstName %>
                            </td>
                            <td>
                                <%= dataUser[i].lastName %>
                            </td>
                            <td>
                                <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">Detail</a>
                                <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                                    <button type="submit">Edit</button>
                                </form>
                                <form action="/delete-user" method="POST" >
                                    <input type="text" hidden value="<%= dataUser[i].id %>" name="userId"/>
                                <button type="submit">Delete</button>
                            </form>        
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
    </div>
    <div class ="creat-user-container">
        <div> <b>Create a new user</b>   </div>
        <form action="/create-new-user" method="POST" >
           <div> 
            <label>firstName:</label>
            <input type="text" name="firstName"/>
           </div> 
           <div> 
            <label>lastName:</label>
            <input type="text" name="lastName"/>
           </div> 
           <div> 
            <label>email:</label>
            <input type="email" name="email"/>
           </div> 
           <div> 
            <label>address:</label>
            <input type="text" name="address"/>
           </div> 
           <div>
            <button type="submit" class="btn-submit">Submit</button>
           </div>
        </form>
    </div>
</body>

</html>