<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">

    <title>Update User</title>

</head>
<body>
    <div class"update-user-container">
    <form action="/update-user" method="POST">
        <div>
            <label>First name:</label>
            <input name="firstName" value="<%= dataUser.firstName  %>"/>
        </div>
        <div>
            <label>Last name:</label>
            <input name="lastName" value="<%= dataUser.lastName  %>"/>
        </div>
        <div>
            <label>email:</label>
            <input name="email" value="<%= dataUser.email  %>"/>
        </div>
        <div>
            <label>address:</label>
            <input name="address" value="<%= dataUser.address  %>"/>
        </div>
        <input type ="text" hidden value="<%= dataUser.id%>" name="id"/>
        <div>
            <button class="btn-save" type="submit">Save</button>
        </div>
    </form>
</div>
</body>
</html>